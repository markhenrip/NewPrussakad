package application;

import javafx.application.Application;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.ToggleGroup;
import javafx.scene.paint.Color;
import javafx.stage.Stage;

public class Peaklass extends Application {
	private Scene startStseen;
	private Scene continueStseen;
	@Override
	public void start(Stage põhi) throws Exception {
		Group grupeering = new Group();
		Button startNupp = new Button("Start");
		Button exitNupp = new Button("Exit");
		
		grupeering.getChildren().addAll(startNupp, exitNupp);
		startStseen = new Scene(grupeering, 400, 400, Color.BLUE);
		startNupp.setLayoutX(170);
		startNupp.setLayoutY(180);
		exitNupp.setLayoutX(170);
		exitNupp.setLayoutY(210);
		põhi.setResizable(false);
		põhi.setScene(startStseen);
		põhi.show();
		
		
	}
	
	public static void main(String[] args){
		launch(args);
	}
	
}
